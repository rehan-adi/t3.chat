generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                         String               @id @default(uuid())
  email                      String               @unique
  name                       String?
  profilePicture             String?
  isEmailVerified            Boolean              @default(false)
  credits                    Int                  @default(5)
  isPremium                  Boolean              @default(false)
  byokEnable                 Boolean              @default(false)
  isbillingPreferencesEnable Boolean              @default(false)
  lastDailyReset             DateTime?
  lastResetMonth             DateTime?
  conversation               Conversation[]
  openRouterApiKey           OpenRouterApiKey?
  systemCustomizations       SystemCustomization?
  paymentHistory             Payment[]
  createdAt                  DateTime             @default(now())
  updatedAt                  DateTime             @updatedAt

  @@map("users")
}

model Conversation {
  id        String    @id @default(uuid())
  title     String?
  summary   String?
  pinned    Boolean   @default(false)
  userId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages  Message[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([userId])
  @@map("conversations")
}

model Message {
  id             String       @id @default(uuid())
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  role           Role
  response       String
  modelName      String?
  createdAt      DateTime     @default(now())

  @@index([conversationId])
  @@map("messages")
}

model SystemCustomization {
  id           String   @id @default(uuid())
  systemName   String?
  systemBio    String?
  systemPrompt String
  systemTrait  Trait[]
  userId       String   @unique
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("system_customizations")
}

model OpenRouterApiKey {
  id        String   @id @default(uuid())
  key       String
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("open_router_api_key")
}

model Payment {
  id                String    @id @default(uuid())
  orderId           String    @unique
  paymentId         String?
  paymentSessionId  String?
  paymentEventTime  DateTime?
  amount            Int
  currency          String
  status            Status
  userId            String
  user              User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  rawWebhookPayload Json?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  @@index([userId])
  @@map("payments")
}

enum Role {
  user
  ai
}

enum Trait {
  friendly
  witty
  concise
  empathetic
  creative
  patient
  curious
}

enum Status {
  PENDING
  INIT_ORDER_FAILED
  SUCCESS
  FAILED
}
